    <div class="chat-bubble bg-neutral-content text-neutral">
        {{ query }}
    </div>
</div>
<span 
    class="inline"
    hx-on::after-request="document.querySelectorAll(['input', 'button']).forEach(el => el.disabled = false)">
    <div 
        hx-get="/chat/respond?query={{query}}&assistant_id={{assistant_id}}" hx-trigger="intersect once" style="padding: 4%"
        hx-target="this"
        hx-swap="outerHTML"
        hx-indicator="#message-spinner"
        hx-on::after-on-load="
            document.getElementById('chat-window').scrollTo({
            top: document.getElementById('chat-window').scrollHeight,
            behavior: 'smooth'
            });
            "
        class="flex justify-center"
    >
        <div role="status" id="message-spinner" class="htmx-indicator">
